│   ├── useFetch.js
│   └── useCart.js
│
├── lib/                            # Configs externes et utilitaires (ex : Stripe, Mapbox)
│   ├── api.js                      # Axios ou fetch wrapper
│   ├── stripe.js                   # Stripe config
│   └── constants.js                # Routes, rôles, statuts, etc.
│
├── services/                       # Appels API organisés par entité
│   ├── authService.js
│   ├── orderService.js
│   ├── userService.js
│   └── productService.js
│
├── styles/                         # Fichiers CSS globaux, variables, tailwind, etc.
